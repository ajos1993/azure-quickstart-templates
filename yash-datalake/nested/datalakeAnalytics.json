{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Data Lake Store account to create."
      }
    },
    "adlAnalyticsName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Data Lake Analytics account to create."
      }
    },
    "adlStoreName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Data Lake Store account to create."
      }
    },
    "resourceTags": {
      "type": "object",
      "metadata": {
        "description": " Tags assigned to resources"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DataLakeStore/accounts",
      "name": "[parameters('adlStoreName')]",
      "apiVersion": "2016-11-01",
      "location": "East US 2",
      "tags": "[parameters('resourceTags')]"
    },
    {
      "type": "Microsoft.DataLakeAnalytics/accounts",
      "name": "[parameters('adlAnalyticsName')]",
      "apiVersion": "2016-11-01",
      "location": "East US 2",
      "tags": "[parameters('resourceTags')]",
      "dependsOn": [
        "[concat('Microsoft.DataLakeStore/accounts/', parameters('adlStoreName'))]"
      ],
      "properties": {
        "defaultDataLakeStoreAccount": "[parameters('adlStoreName')]",
        "dataLakeStoreAccounts": [
          {
            "name": "[parameters('adlStoreName')]"
          }
        ],
        "storageAccounts": [
          {
            "name": "[parameters('storageAccountName')]",
            "properties": {
              "accessKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts',parameters('storageAccountName')),'2018-07-01').keys[0].value]"
            }
          }
        ]
      }
    }
  ]
}
